/* 
 * ------------------------------
 * Mixins'n'Vars
 * ------------------------------
 */

red			= #e94446
dark-red 	= #b51d1d
yellow      = #ffec00
gray 		= #e6e4e4
dark-gray 	= #343333
lighten-gray= #e2e2e2
light-gray 	= #aeaeae
dark-blue   = #1c3e88

.visuallyhidden
    border 0
    clip rect(0 0 0 0)
    height 1px
    margin -1px
    overflow hidden
    padding 0
    position absolute
    width 1px

screen-reader-text()
  clip rect(1px, 1px, 1px, 1px)
  position absolute
  &:focus
    clip auto
    display block
    height auto
    line-height normal
    position absolute
    left 5px
    top 5px
    text-decoration none
    text-transform none
    width auto
    z-index 100000
    
.screen-reader-text
	screen-reader-text()

.vertical-align
    width 100%
    display table
    > div
        display table-cell
        vertical-align middle

.block-center
    margin 0 auto

/*
 * Buttons
 */

button-color(color, bg = light-gray)
    color color
    background-color bg
    &:focus
    &:hover
        background-color darken(bg, 10%)

.button
    padding 0.5rem 1.5rem
    transition background-color .3s ease-out
    &.red
        button-color( #fff, red )

input[type="submit"]
button
    border none
       
/*
 * Lists, menus
 */

.list
    padding 0
    margin 0
    list-style-type none

.hoverable
    li:hover
        background-color #f5f5f5

.inline-list
	li
		display inline-block

.pull-right
	float right

.pull-left
    float left
    
/*
 * Text
 */

.left-text
	text-align left

.right-text
	text-align right

.center-text
	text-align center

.text-big
    font-size 1.7rem


/*
 * Responsive Utilities
 */

.text-center-s
	@media (max-width: 50em )
		text-align center

.text-center-xs
	@media (max-width: 40em )
		text-align center
